<body class='bg-light'>
  <div class='container my-5'>
    <h1 class='text-center mb-4'>Danh sách Khóa học</h1>

    <div class='row row-cols-1 row-cols-md-3 g-4'>
      {{#each courses}}
        {{#unless this.isDeleted}}
          {{! Ẩn các khóa học đã bị xóa }}
          <div class='col'>
            <div class='card h-100 shadow-sm border-0'>
              <img
                src='{{this.image}}'
                class='card-img-top'
                alt='{{this.name}}'
                style='height: 180px; object-fit: cover;'
              />
              <div class='card-body d-flex flex-column'>
                <h5 class='card-title text-primary'>{{this.name}}</h5>
                <p class='card-text flex-grow-1'>
                  {{trimText this.description 100}}
                  {{! Mô tả ngắn }}
                </p>
                <p class='card-text'>
                  <small class='text-muted'>Ngày tạo:
                    {{formatDate this.createdAt}}</small>
                </p>
                <a
                  href='/courses/{{this.slug}}'
                  class='btn btn-outline-primary mt-auto'
                >
                  Xem chi tiết
                </a>
              </div>
            </div>
          </div>
        {{/unless}}
      {{/each}}
    </div>
  </div>
</body>