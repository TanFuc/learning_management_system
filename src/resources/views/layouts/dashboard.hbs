<html lang='vi'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Dashboard</title>
    <link rel='stylesheet' href='/bootstrap/bootstrap.min.css' />
    <link rel='stylesheet' href='/bootstrap/bootstrap-icons.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <script src='/js/bootstrap.bundle.js'></script>
    <script
      src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js'
    ></script>
  </head>
  <body class='d-flex flex-column min-vh-100'>

    <!-- Header -->
    <header class='bg-dark text-white py-3'>
      <div class='container d-flex justify-content-between align-items-center'>
        <h1 class='h3'>Learning Management System</h1>
        <div class='user-info d-flex align-items-center'>
          {{#if user}}
            <img
              src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSX5ZNQ713j1cc3E1lyaiCqwG2zHbdKNW6kiQ&s'
              alt='Avatar'
              class='rounded-circle'
              width='40'
              height='40'
            />
            <span class='ms-2'>{{user.username}}</span>
            <a
              href='/auth/logout'
              class='ms-3 btn btn-outline-light btn-sm'
            >Đăng xuất</a>
          {{else}}
            <a href='/login' class='btn btn-light btn-sm'>Đăng nhập</a>
          {{/if}}
        </div>
      </div>
    </header>

    <div class='container-fluid'>
      <div class='row flex-grow-1'>
        <!-- Sidebar -->
        <nav id='sidebar' class='col-md-3 col-lg-2 d-md-block bg-light'>
          <div class='position-sticky'>
            <ul class='nav flex-column'>
              <li class='nav-item'>
                <a class='nav-link active' href='/dashboard'>
                  <i class='bi bi-house-door'></i>
                  Trang chủ
                </a>
              </li>
              <li class='nav-item'>
                <a class='nav-link' href='/courses'>
                  <i class='bi bi-book'></i>
                  Quản lý khóa học
                </a>
              </li>
              <li class='nav-item'>
                <a class='nav-link' href='/students'>
                  <i class='bi bi-person'></i>
                  Quản lý học viên
                </a>
              </li>
              <li class='nav-item'>
                <a class='nav-link' href='/settings'>
                  <i class='bi bi-gear'></i>
                  Cài đặt tài khoản
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <!-- Main Content -->
        <main class='col-md-9 ms-sm-auto col-lg-10 px-4'>
          <div class='pt-3 pb-2 mb-3 border-bottom'>
            <h2 class='h4'>Chào mừng bạn đến với Dashboard</h2>
          </div>

          <!-- Dashboard Widgets -->
          <div class='row'>
            <div class='col-md-4 mb-4'>
              <div class='card shadow-sm'>
                <div class='card-body text-center'>
                  <h5 class='card-title'>Khóa học</h5>
                  <p class='card-text'>Số lượng khóa học bạn đang giảng dạy</p>
                  <h3>12</h3>
                </div>
              </div>
            </div>
            <div class='col-md-4 mb-4'>
              <div class='card shadow-sm'>
                <div class='card-body text-center'>
                  <h5 class='card-title'>Sinh viên</h5>
                  <p class='card-text'>Số lượng sinh viên tham gia khóa học</p>
                  <h3>150</h3>
                </div>
              </div>
            </div>
            <div class='col-md-4 mb-4'>
              <div class='card shadow-sm'>
                <div class='card-body text-center'>
                  <h5 class='card-title'>Thông báo</h5>
                  <p class='card-text'>Thông báo mới nhất từ hệ thống</p>
                  <h3>5</h3>
                </div>
              </div>
            </div>
          </div>

          <!-- Recent Activities -->
          <div class='mb-4'>
            <h4>Hoạt động gần đây</h4>
            <ul class='list-group'>
              <li class='list-group-item d-flex justify-content-between'>
                <span>Cập nhật thông tin khóa học #10</span>
                <span class='text-muted'>2 giờ trước</span>
              </li>
              <li class='list-group-item d-flex justify-content-between'>
                <span>Đăng tải tài liệu khóa học</span>
                <span class='text-muted'>1 ngày trước</span>
              </li>
              <li class='list-group-item d-flex justify-content-between'>
                <span>Thêm sinh viên mới vào khóa học</span>
                <span class='text-muted'>3 ngày trước</span>
              </li>
            </ul>
          </div>

        </main>
      </div>
    </div>

    <!-- Footer -->
    <footer class='bg-light text-center py-3 mt-auto'>
      <p>&copy; 2025 Learning Management System. Tất cả quyền được bảo vệ.</p>
    </footer>

    <!-- Bootstrap 5 JS and Popper -->
    <script
      src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js'
    ></script>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js'
    ></script>
  </body>
</html>