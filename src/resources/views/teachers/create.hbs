<div class='container my-5'>
  <h2 class='mb-4'>Đăng khóa học mới</h2>
  <form action='/courses/store' method='POST'>
    <div class='mb-3'>
      <label class='form-label'>Tên khóa học</label>
      <input type='text' class='form-control' name='name' required />
    </div>

    <div class='mb-3'>
      <label class='form-label'>Mô tả</label>
      <textarea class='form-control' name='description' rows='3'></textarea>
    </div>

    <div class='mb-3'>
      <label class='form-label'>URL hình ảnh</label>
      <input type='text' class='form-control' name='image' />
    </div>

    <div class='mb-3'>
      <label class='form-label'>ID video (YouTube)</label>
      <input type='text' class='form-control' name='videoId' />
    </div>

    <div class='mb-3'>
      <label class='form-label'>Trình độ</label>
      <input type='text' class='form-control' name='level' />
    </div>

    <div class='mb-3'>
      <label class='form-label'>Thời lượng</label>
      <input type='text' class='form-control' name='duration' />
    </div>

    <div class='mb-3'>
      <label class='form-label'>Giá khóa học (VNĐ)</label>
      <input
        type='number'
        class='form-control'
        name='price'
        min='0'
        value='0'
      />
    </div>

    <div class='form-check mb-3'>
      <input
        class='form-check-input'
        type='checkbox'
        name='isFree'
        id='isFree'
        checked
      />
      <label class='form-check-label' for='isFree'>Miễn phí</label>
    </div>

    <div class='mb-3'>
      <label class='form-label'>Tags (ngăn cách bởi dấu phẩy)</label>
      <input type='text' class='form-control' name='tags' />
    </div>

    <div class='form-check mb-4'>
      <input
        class='form-check-input'
        type='checkbox'
        name='isPublished'
        id='isPublished'
      />
      <label class='form-check-label' for='isPublished'>Công khai khóa học</label>
    </div>

    <button type='submit' class='btn btn-primary'>Lưu khóa học</button>
    <a href='/courses' class='btn btn-secondary'>Hủy</a>
  </form>
</div>