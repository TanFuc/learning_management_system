<h1 class='mb-4'>Chào mừng đến Admin Dashboard</h1>
<div class='row'>
  <div class='col-md-6'>
    <div class='card border-primary mb-3'>
      <div class='card-header'>Người dùng</div>
      <div class='card-body text-primary'>
        <h5 class='card-title'>{{usersCount}} người dùng</h5>
        <a href='/admin/users' class='btn btn-sm btn-outline-primary'>Quản lý
          người dùng</a>
      </div>
    </div>
  </div>
  <div class='col-md-6'>
    <div class='card border-success mb-3'>
      <div class='card-header'>Bài đăng</div>
      <div class='card-body text-success'>
        <h5 class='card-title'>{{postsCount}} bài đăng</h5>
        <a href='/admin/courses' class='btn btn-sm btn-outline-success'>Quản lý
          bài đăng</a>
      </div>
    </div>
  </div>
</div>