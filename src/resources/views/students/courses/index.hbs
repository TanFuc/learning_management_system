<style>
  body {
    overflow-x: hidden;
  }

  .title {
    margin-top: 2rem;
  }

  h1 {
    margin-bottom: 3rem;
  }

  .card-img-top-wrapper {
    position: relative;
    overflow: hidden;
  }

  .card-img-top {
    height: 200px;
    width: 100%;
    object-fit: cover;
  }

  .play-icon-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    padding: 15px;
    transition: 0.3s ease;
  }

  .play-icon-overlay svg {
    fill: white;
  }

  .card:hover .play-icon-overlay {
    background: rgba(0, 0, 0, 0.7);
    transform: translate(-50%, -50%) scale(1.1);
  }

  .card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
  }

  .card {
    transition: all 0.3s ease;
  }

  .course-price {
    font-weight: bold;
    margin-bottom: 10px;
  }

  .paid {
    color: #28a745;
  }

  .free {
    color: #007bff;
  }

  .badge-paid {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: #ffc107;
    color: #000;
    font-weight: bold;
    padding: 5px 10px;
    border-radius: 5px;
  }
</style>

